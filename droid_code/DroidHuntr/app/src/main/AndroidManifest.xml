<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sungard.droid.huntr" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".HuntrApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:description="@string/app_name">

        <activity
            android:name=".SelectGameActivity"
            android:label="@string/title_activity_select_game" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CreateUserActivity"
            android:label="@string/title_activity_createuser" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SelectGameActivity" />
        </activity>

        <activity
            android:name=".SelectTeamActivity"
            android:label="@string/title_activity_selectteam"
            android:parentActivityName=".CreateUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CreateUserActivity" />
        </activity>
        <activity
            android:name=".CreateTeamActivity"
            android:label="@string/title_activity_createteam"
            android:parentActivityName=".SelectTeamActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SelectTeamActivity" />

            android:name=".PreferencesActivity"
            android:label="@string/title_activity_preferences" >

        </activity>

        <activity
            android:name=".CluesActivity"
            android:label="@string/title_activity_game_home" >
        </activity>

        <activity
            android:name=".StandingsActivity"
            android:label="@string/title_activity_standings" >
        </activity>
        <activity
            android:name=".ChatActivity"
            android:label="@string/title_activity_chat" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_preferences" >
        </activity>

        <activity
            android:name=".ClueDetailActivity"
            android:label="@string/title_activity_clue_detail"
            android:parentActivityName=".CluesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sungard.droid.huntr.CluesActivity" />
        </activity>


    </application>

</manifest>
